{% extends 'base.html.twig' %}
{% block body %}
    {% block titre %}<h1>Liste des personnages</h1>{% endblock %}

<table class="table" >
    <tr class="thead-dark">
        <th>Image</th>
        <th>Nom</th>
        <th>Age</th>
        <th>Temperament</th>
        <th>Force</th>
        <th>Constitution</th>
        <th>Agilit√©</th>
        <th>Intelligence</th>
    </tr>
    {% for player in players %}
        <tr>
            <td><img src="{{ asset('images/personnages/' ~ player.pseudo ~ '.png') }}"></td>
            <td> <a href="{{ path('detail_perso', {'pseudo' : player.pseudo}) }}" >{{ player.pseudo }}</a></td>
            <td> {{ player.age}}</td>
            <td> {{ player.temperament }}</td>
            <td> {{ player.carac.force}}</td>
            <td> {{ player.carac.constitution }}</td>
            <td> {{ player.carac.agi}}</td>
            <td> {{ player.carac.intel }}</td>
        </tr>
    {% endfor %}
</table>

{% endblock %}